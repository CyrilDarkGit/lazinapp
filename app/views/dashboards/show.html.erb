<div class="container-fluid">


  <h3><%= "Welcome #{ @user.username }"%></h3>
  <%= @user.username %>
  <%= @user.email %>

  <h3><%= "Here are your upcoming bookings"%></h3>
    <div class="d-flex">
      <% @user.bookings.each do |booking| %>
        <div class="card">
          <%= "Comment #{booking.comment}" %>

        </div>
        <% end %>
    </div>

  <h3><%= "Here are your past bookings"%></h3>
  <div class="d-flex">
  <% @user.bookings.each do |booking| %>
    <div class="card">
      <%= cl_image_tag(booking.offer.photo.key,width: 100, height: 100, crop: :fill) %>
      <h2><%= booking.offer.name %></h2>
    <div>
      <p><%= "#{booking.offer.unit_price} #{booking.offer.currency}" %></p>
      <p><%= booking.offer.location %></p>
    </div>
    <div class="overflow-hidden">
      <p><%= booking.offer.overview %></p>
    </div>

 </div>
 <% end %>
</div>
