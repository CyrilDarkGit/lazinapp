<%= simple_form_for :search, url: offers_path, method: :get do |f| %>

<div class="checkbox inline">
  <%= f.input :categories, as: :check_boxes, class: "list-inline", collection: Offer::CATEGORIES %>
</div>

  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="query" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat p-0">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>
