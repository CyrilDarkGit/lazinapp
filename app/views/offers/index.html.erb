<div class="grid_display">
  <div class="d-flex justify-content-between mb-3">
    <div>
      <h5 class="">Hello ! What are you looking for today?</h5>
    </div>
    <div class="d-flex justify-content-between align-items">
      <%= render "shared/search_bar"%>
      <%= link_to "New offer", new_offer_path, class: "btn btn-dark" %>
    </div>
  </div>
  <div class="cards">
    <% @offers.each do |offer| %>
    <a href="<%= offer_path(offer)%>">
    <div class="card">
      <div class="image_card">
        <% if offer.photo.attached? %>
          <%= cl_image_tag(offer.photo.key,width: 100, height: 100, quality: 60) %>
        <% else %>
          <%= image_tag("photo_placeholder.png", width: 100, height: 100, quality: 60) %>
        <% end %>
      </div>
      <div class="card_details d-flex justify-content-between align-items">
        <div>
          <h3><%= offer.name.upcase %></h3>
          <p class="location">
            <%= offer.location %>
          </p>
        </div>
        <div>
          <p><%= "#{offer.unit_price}/day "%></p>
          <p><%= "#{offer.currency}"%></p>

        </div>
      </div>
    </div>
    </a>
    <% end %>
  </div>
</div>
<br>
